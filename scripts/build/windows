#!/usr/bin/env bash
#
# Build a static binary for Windows
#

set -eu -o pipefail

source ./scripts/.variables

export CGO_ENABLED=0
export GOOS=windows
export GOARCH=amd64
export GOGC=off

TARGET="build/monitoror-$GOOS-$GOARCH.exe"

echo "Building statically linked $TARGET"
go build -o "${TARGET}" --ldflags "${LDFLAGS}" "${SOURCE}"
